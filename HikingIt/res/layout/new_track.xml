<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="New Track"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ntCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ntRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:onClick="createTrack"
        android:text="Create Track" />

    <Button
        android:id="@+id/ntRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ntPick"
        android:layout_alignLeft="@+id/ntCreate"
        android:layout_marginBottom="30dp"
        android:onClick="recordTrack"
        android:text="Record Track" />

    <Button
        android:id="@+id/ntPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp"
        android:onClick="pickTrack"
        android:text="Pick Track" />

</RelativeLayout>