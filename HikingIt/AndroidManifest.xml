        <activity
            android:name="fr.eurecom.hikingit.TrackEditMapActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="fr.eurecom.hikingit.TrackEditDetailActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
