        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBM39SgicyivCvgROzcaCCtzcPuUlNkJzc" />

        <activity
            android:name="fr.eurecom.hikingit.HomeActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.eurecom.hikingit.DisplayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="fr.eurecom.hikingit.SearchTrackActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="fr.eurecom.hikingit.DisplayAllActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="fr.eurecom.hikingit.DisplayMapActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="fr.eurecom.hikingit.TrackDetailActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="fr.eurecom.hikingit.CreateFragmentActivity"
            android:uiOptions="splitActionBarWhenNarrow"
